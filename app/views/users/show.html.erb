
<div class="welcome-message">
<div class="row">
  <div class="col-xs-12">
    <h4>
      Hello, <strong><%= @user.first_name %> <%= @user.last_name %></strong>.
    </h4>
  </div>
</div>

<br>

<div class="row">
  <div class="col-xs-12">
    <p>
      You currently have <strong>20</strong> diary entries, the most recent of which was <strong>yesterday</strong>.
    </p>
  </div>
</div>
</div>

<br>

<div class="row">
  <div class="col-xs-12 search-form">
    <form action="/index_by_tag" method="get">
      <input type="text" name="tag" placeholder="search by tag">
      <input type="hidden" name="user_id" value="<%= @user.id %>">
      <button type="submit" class="btn btn-primary search-go">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button><br>
    </form>
  </div>

  <div class="col-xs-12 search-error">
    <p><%= @nonexistent_tag_error %></p>
  </div>

  <div class="col-xs-12 search-form">
    <form action="/index_by_date" method="get">
      <input type="text" name="selected_date" placeholder="search by YYYY-MM-DD">
      <input type="hidden" name="user_id" value="<%= @user.id %>">
      <button type="submit" class="btn btn-primary search-go">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button><br>
    </form>
  </div>

  <div class="col-xs-12 search-error">
    <p><%= @nonexistent_date_error %></p>
  </div>

  <div class="col-xs-12 search-form">
    <form action="/index_by_keyword" method="get">
      <input type="text" name="keyword" placeholder="search by keyword">
      <input type="hidden" name="user_id" value="<%= @user.id %>">
      <button type="submit" class="btn btn-primary search-go">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button>
    </form>
  </div>

  <div class="col-xs-12 search-error">
    <p><%= @nonexistent_keyword_error %></p>
  </div>

</div>
